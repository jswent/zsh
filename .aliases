# Colorful ZSH
if [ -x /usr/bin/dircolors ]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias dir='dir --color=auto'
  alias vdir='vdir --color=auto'
  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
fi

# Personal aliases
alias ls='exa --icons --color=always --group-directories-first'
alias ll='ls -lF'
alias lsa='ls -lah'
alias cls='clear && neofetch'
alias btop='btop --utf-force'
alias spt='~/scripts/launchspt'
alias powermenu='~/scripts/powermenu'
alias slauncher='~/scripts/slauncher'
alias launcher='~/scripts/launcher'
alias vi='nvim'
alias sfetch='neofetch --ascii_distro arch --ascii ~/machfiles/ascii'

# git functions
push () {
  current_branch=$(git rev-parse --abbrev-ref HEAD)
  branches=$(git remote -v | grep push | awk '{print $1}')
  for branch in "$branches"
  do
    git push -u "$branch" "$current_branch"
  done
  
}

# git aliases
alias gs='git status'
alias gp=push

# change dir aliases
alias cds='cd $HOME/scripts && lsa'
alias cdd='cd $HOME/Documents && lsa'
alias cdz='cd $HOME/.zsh && lsa'
alias cdb='cd $HOME/.bash && lsa'
alias cdc='cd $HOME/.config && lsa'
alias cdt='cd $HOME/.tmux && lsa'

alias bash='clear && exec bash'
